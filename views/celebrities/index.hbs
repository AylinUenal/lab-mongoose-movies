<h2>Celebrities</h2>
{{#each celebritiesList}}
<p><a href="/celebrities/{{this._id}}">{{this.name}}</a> </p>
<form action="/celebrities/{{this._id}}/delete" method="POST">
  <button type="submit">Delete</button>
</form>

<form action="celebrities/{{this._id}}/edit" method="POST">
  <button type="submit">Edit</button>
</form>

{{/each}}

<p><a href="/celebrities/new"> Add a new celebrity!</a></p>